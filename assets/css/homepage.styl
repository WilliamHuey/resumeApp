$width-of-header = (1000/16)em
$height-of-header = (90/16)em

html, body
    background-image url('/images/fabric_plaid.png')
    width 100%
    padding 0px

.header-row
    background-color gray
    height $height-of-header
    width 100%
    box-shadow 0px 0px 3px 1px #6B6B6B
    -webkit-box-shadow 0px 0px 3px 1px #6B6B6B
    -moz-box-shadow 0px 0px 3px 1px #6B6B6B
    -o-box-shadow 0px 0px 3px 1px #6B6B6B
    border-bottom solid 1px darkgray

.header-row-contents
    width $width-of-header
    height $height-of-header
    margin auto

.header-link
    text-decoration none !important
    color white
    font-size 1.5em
    outline 0 !important
    &:hover
        color lightgray
    &:visited
        color white
        &:hover
            color lightgray

.individual-link-area
    margin-top 6%

#experience-link
    margin-left -6.5%

/*1279px*/
@media screen and (max-width: 79.94em)
    body
        padding 0px
    .header-row-contents
        width 100%

/*765px*/
@media screen and (min-width: 0em) and (max-width: 47.9375em)
    .individual-link-area
        margin-top 0%
        margin-bottom (10/16)em
        text-align center
    #first-link
        margin-top (30/16)em
    #experience-link
        margin-left 0%
    .header-row
        height (160/16)em



















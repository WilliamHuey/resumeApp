$width-of-header = (1000/16)em
$height-of-header = (90/16)em

html, body
    background-image url('/images/fabric_plaid.png')

.header-row
    background-color gray
    height $height-of-header
    width 100%
    box-shadow 0px 0px 3px 1px #6B6B6B
    -webkit-box-shadow 0px 0px 3px 1px #6B6B6B
    -moz-box-shadow 0px 0px 3px 1px #6B6B6B
    -o-box-shadow 0px 0px 3px 1px #6B6B6B
    border-bottom solid 1px darkgray

.header-row-contents
    width $width-of-header
    height $height-of-header
    margin auto

.link-content
    width $width-of-header

.header-link
    color white
    font-size 1.5em
    outline 0
    &:hover
        color lightgray
    &:visited
        color white
        &:hover
            color lightgray

.individual-link-area
    margin-top 6.5%

#experience-link
    margin-left 6%

.four.columns.visible-when-small
    display none

@media screen and (max-width: 980px) and (min-width: 0em)
    .six.columns.bottom.end
        background-color lightgray
    .six.columns.visible-when-large
        display none
    .four.columns.visible-when-small
        display inline

@media screen and (max-width: 780px) and (min-width: 10px)
    .four.columns.visible-when-small
        display none
    .row.link-area
        float left
    .six.columns.bottom.end
        float left
    .individual-link-area
        float left








$width-of-header = (1000/16)em
$height-of-header = (90/16)em

html, body
    background-image url('/images/fabric_plaid.png')
    width 100%

.header-row
    background-color gray
    height $height-of-header
    width 100%
    box-shadow 0px 0px 3px 1px #6B6B6B
    -webkit-box-shadow 0px 0px 3px 1px #6B6B6B
    -moz-box-shadow 0px 0px 3px 1px #6B6B6B
    -o-box-shadow 0px 0px 3px 1px #6B6B6B
    border-bottom solid 1px darkgray

.header-row-contents
    width $width-of-header
    height $height-of-header
    margin auto

.header-link
    text-decoration none !important
    color white
    font-size 1.5em
    outline 0 !important
    &:hover
        color lightgray
    &:visited
        color white
        &:hover
            color lightgray

.individual-link-area
    margin-top 6.8%

/*1279px*/
@media screen and (max-width: 79.94em)
    body
        padding 0px
    .header-row-contents
        width 100%

/*770px*/
@media screen and (max-width: 48.125em)
    .individual-link-area
        margin-top 0%















